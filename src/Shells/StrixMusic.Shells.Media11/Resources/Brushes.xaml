<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Name="Dark">
            <SolidColorBrush x:Key="LowBackgroundBrush" Color="#FF333333"/>
            <AcrylicBrush x:Key="PaneHostBackgroundBrush"
                          TintColor="#FF1C1C1C" TintOpacity=".6"
                          BackgroundSource="HostBackdrop"
                          FallbackColor="#FF2B2B2B"/>
            <AcrylicBrush x:Key="PaneBackgroundBrush"
                          TintColor="#FF1C1C1C" TintOpacity=".6"
                          BackgroundSource="Backdrop"
                          FallbackColor="#FF2B2B2B"/>
        </ResourceDictionary>
        <ResourceDictionary x:Name="Light">
            <SolidColorBrush x:Key="LowBackgroundBrush" Color="#FFCCCCCC"/>
            <AcrylicBrush x:Key="PaneHostBackgroundBrush"
                          TintColor="White" TintOpacity=".6"
                          BackgroundSource="HostBackdrop"
                          FallbackColor="#FFF2F2F2"/>
            <AcrylicBrush x:Key="PaneBackgroundBrush"
                          TintColor="White" TintOpacity=".6"
                          BackgroundSource="Backdrop"
                          FallbackColor="#FFF2F2F2"/>
        </ResourceDictionary>
        <ResourceDictionary x:Name="Default">
            <SolidColorBrush x:Key="LowBackgroundBrush" Color="#FF333333"/>
            <AcrylicBrush x:Key="PaneHostBackgroundBrush"
                          TintColor="#FF1C1C1C" TintOpacity=".6"
                          BackgroundSource="HostBackdrop"
                          FallbackColor="#FF2B2B2B"/>
            <AcrylicBrush x:Key="PaneBackgroundBrush"
                          TintColor="#FF1C1C1C" TintOpacity=".6"
                          BackgroundSource="Backdrop"
                          FallbackColor="#FF2B2B2B"/>
        </ResourceDictionary>
        <ResourceDictionary x:Name="HighContrast">
            <SolidColorBrush x:Key="LowBackgroundBrush" Color="#FF333333"/>
            <AcrylicBrush x:Key="PaneHostBackgroundBrush"
                          TintColor="#FF1C1C1C" TintOpacity=".6"
                          BackgroundSource="HostBackdrop"
                          FallbackColor="#FF2B2B2B"/>
            <AcrylicBrush x:Key="PaneBackgroundBrush"
                          TintColor="#FF1C1C1C" TintOpacity=".6"
                          BackgroundSource="Backdrop"
                          FallbackColor="#FF2B2B2B"/>
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>

    <RevealBackgroundBrush x:Key="TransparentBackgroundRevealBrush" Color="Transparent"/>

    <LinearGradientBrush x:Key="DiagonalAccentBackgroundBrush"
                     StartPoint="0,0" EndPoint="1,1" MappingMode="RelativeToBoundingBox">
        <GradientStop Color="{ThemeResource SystemAccentColorLight1}" Offset="0" />
        <GradientStop Color="{ThemeResource SystemAccentColor}" Offset="1" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="GlassTubeMediumBackgroundBrush"
                         StartPoint="0,0" EndPoint="0,1" MappingMode="RelativeToBoundingBox">
        <GradientStop Color="#33FFFFFF" Offset="0" />
        <GradientStop Color="#11FFFFFF" Offset="0.5" />
        <GradientStop Color="#44000000" Offset="0.5" />
        <GradientStop Color="#33000000" Offset="1" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="GlassTubeMediumBorderBrush"
                         StartPoint="0,0" EndPoint="0,1" MappingMode="RelativeToBoundingBox">
        <GradientStop Color="{ThemeResource SystemAltLowColor}" Offset="0" />
        <GradientStop Color="{ThemeResource SystemAltMediumLowColor}" Offset="1" />
    </LinearGradientBrush>
    
</ResourceDictionary>
