<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:collections="using:StrixMusic.Shells.Media11.Controls.Collections"
    xmlns:pages="using:StrixMusic.Shells.Media11.Controls.Pages"
    xmlns:vmpages="using:StrixMusic.Shells.Media11.ViewModels.Pages"
    xmlns:owlconv="using:OwlCore.WinUI.Converters"
    x:Class="StrixMusic.Shells.Media11.Styles.Pages.Media11HomePageStyle">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="ms-appx:///StrixMusic.Shells.Media11/Styles/PivotStyle.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="Media11HomePageStyle" TargetType="pages:Media11HomePage">
        <Style.Setters>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="pages:Media11HomePage">
                        <Grid>
                            <Pivot x:Name="PART_Pivot" Style="{StaticResource Media11Pivot}">
                                <Pivot.HeaderTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}" FontSize="20" Margin="0,0,0,-8"/>
                                    </DataTemplate>
                                </Pivot.HeaderTemplate>

                                <PivotItem x:Uid="/Music/SongsPVI" x:Name="PART_SongsPivotItem" Header="Songs" Margin="8,0,0,0">
                                    <collections:Media11TrackCollection TrackCollection="{Binding Library, RelativeSource={RelativeSource Mode=TemplatedParent}}"/>
                                </PivotItem>
                                <PivotItem x:Uid="/Music/ArtistsPVI" x:Name="PART_ArtistsPivotItem" Header="Artists" Margin="8,0,0,0">
                                    <collections:Media11ArtistCollection ArtistCollection="{Binding Library, RelativeSource={RelativeSource Mode=TemplatedParent}}"/>
                                </PivotItem>
                                <PivotItem x:Uid="/Music/AlbumsPVI" x:Name="PART_AlbumsPivotItem" Header="Albums" Margin="8,0,0,0">
                                    <collections:Media11AlbumCollection AlbumCollection="{Binding Library, RelativeSource={RelativeSource Mode=TemplatedParent}}"/>
                                </PivotItem>
                            </Pivot>

                            <ContentPresenter x:Name="PART_AllEmptyContentPresenter" Visibility="Collapsed" />
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>

    <Style BasedOn="{StaticResource Media11HomePageStyle}" TargetType="pages:Media11HomePage"/>

</ResourceDictionary>
